<% provide(:title, "Signup") %>

<div class="row justify-content-center">
  <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title mb-5 text-center">Create new account</h3>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control", autofocus: true, required: true, placeholder: "Username", autocomplete: "username", maxlength: 20 %>
            <small id="usernameHelp" class="form-text text-muted">Only letters and numbers are allowed.</small>
          </div>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control", required: true, placeholder: "Email Address", autocomplete: "email", maxlength: 100 %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", required: true, placeholder: "Password", minlength: 6, maxlength: 128, autocomplete: "current-password" %>
            <% if @minimum_password_length %>
              <small id="passwordHelp" class="form-text text-muted">Password length should be minimum <%= @minimum_password_length %> characters.</small>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Password Confirmation", minlength: 6, maxlength: 128, autocomplete: "new-password" %>
          </div>

          <br />
          <%= f.submit "Signup", class: "btn btn-primary btn-xs-block", data: { disable_with: "Signing up..." } %>
        <% end %>

        <hr>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
