<% provide(:title, "Account") %>

<div class="row justify-content-center">
  <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title mb-5 text-center">Update your account</h3>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control", autofocus: true, required: true, placeholder: "Username", autocomplete: "username", maxlength: 20 %>
            <small id="usernameHelp" class="form-text text-muted">Only letters and numbers are allowed.</small>
          </div>

          <div class="form-group">
            <%= f.label :email, "Email Address" %>
            <%= f.email_field :email, class: "form-control", required: true, placeholder: "Email Address", autocomplete: "email", maxlength: 100 %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password", minlength: 6, maxlength: 128, autocomplete: "new-password" %>
            <small class="text-muted">Leave blank if you don't want to change it.</small>
            <% if @minimum_password_length %>
              <small id="passwordHelp" class="form-text text-muted">Password length should be minimum <%= @minimum_password_length %> characters.</small>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation", minlength: 6, maxlength: 128, autocomplete: "new-password" %>
          </div>

          <div class="form-group">
            <%= f.label :current_password, "Current Password" %>
            <%= f.password_field :current_password, class: "form-control", required: true, placeholder: "Password", minlength: 6, maxlength: 128, autocomplete: "current-password" %>
            <small class="text-muted">We need your current password to confirm your changes.</small>
          </div>

          <br />
          <%= f.submit "Update", class: "btn btn-primary btn-xs-block", data: { disable_with: "Signing up..." } %>
        <% end %>

        <hr>

        <div class="mt-3">
          <p>Do you want to delete your account? </p>
          <%= link_to "Delete Account", registration_path(resource_name), data: { confirm: "Your all data will be lost. Can't be recoverd. Are you sure?" }, method: :delete, class: "btn btn-danger btn-xs-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
